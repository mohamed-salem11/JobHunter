@model IEnumerable<JobHunter.Models.Job>
@{
    ViewData["Title"] = "All Jobs";
}
<style>
    .jobs-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
        margin-top: 20px;
    }

    .job-box {
        width: calc(33.333% - 20px);
        background-color: #f9f9f9;
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 16px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        align-items: center;
        transition: transform 0.2s ease;
        min-height: 400px;
    }

        .job-box:hover {
            transform: translateY(-5px);
        }

    .job-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 12px;
    }

    .job-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        width: 100%;
    }

    .job-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 8px;
        text-align: center;
    }

    .job-detail {
        font-size: 0.95rem;
        color: #555;
        margin-bottom: 6px;
        text-align: center;
    }

    .job-button-container {
        margin-top: auto;
        display: flex;
        justify-content: center;
        width: 100%;
        padding-top: 10px;
    }

    .btn-cadet {
        background-color: cadetblue;
        color: white;
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-cadet:hover,
        .btn-cadet:focus {
            background-color: #5f9ea0;
            outline: none;
            box-shadow: 0 0 5px cadetblue;
        }

    @@media (max-width: 1024px) {
        .job-box {
            width: calc(50% - 20px);
        }
    }

    @@media (max-width: 768px) {
        .job-box {
            width: 100%;
        }
    }
</style>
<h1>Result Of Search</h1>

<div class="jobs-container">
    @foreach (var item in Model)
    {
        <div class="job-box">
            @if (!string.IsNullOrEmpty(item.ImagePath))
            {
                <img src="@item.ImagePath" alt="Job Image" class="job-image" />
            }
            else
            {
                <img src="/images/default-job.png" alt="No Image" class="job-image" />
            }
            <div class="job-content">
                <div class="job-title">@item.JobTitle</div>
                <div class="job-detail"><strong>Experience:</strong> @item.years_of_experience years</div>
                <div class="job-detail"><strong>Requirements:</strong> @item.Requirements</div>
            </div>
            <div class="job-button-container">
                <a asp-action="Apply" asp-route-id="@item.Id" asp-controller="Jobs" class="btn-cadet">Apply</a>
            </div>
        </div>
    }
</div>













